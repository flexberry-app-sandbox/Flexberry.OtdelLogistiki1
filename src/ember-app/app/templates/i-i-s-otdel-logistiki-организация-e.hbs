    {{flexberry-field
      readonly=readonly
      value=model.юрАдрес
      class=(if (v-get validationModel "юрАдрес" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-logistiki-организация-e.юрАдрес-caption")
