    }}
    {{flexberry-validationmessage error=(v-get validationModel "оГРН" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.почта
      class=(if (v-get validationModel "почта" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-logistiki-организация-e.почта-caption")
