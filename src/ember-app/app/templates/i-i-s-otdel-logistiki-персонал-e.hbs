<h3 class="ui header">{{t "forms.i-i-s-otdel-logistiki-персонал-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.контакты
      class=(if (v-get validationModel "контакты" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-logistiki-персонал-e.контакты-caption")
      data-test-i-i-s-otdel-logistiki-персонал-e-контакты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "контакты" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel-logistiki-персонал-e.фИО-caption")
      data-test-i-i-s-otdel-logistiki-персонал-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-logistiki-персонал-e.рукОтдЛог-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.рукОтдЛог
      displayAttributeName="фИО"
      autocomplete=true
      relationName="рукОтдЛог"
      projection="РукОтдЛогL"
      title=(t "forms.i-i-s-otdel-logistiki-персонал-e.рукОтдЛог-caption")
      readonly=readonly
      componentName="рукОтдЛогLookup"
      class=(if (v-get validationModel "рукОтдЛог" "isInvalid") "error")
      data-test-i-i-s-otdel-logistiki-персонал-e-рукОтдЛог=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "рукОтдЛог" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel-logistiki-персонал-e.тЧВодитель-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.тЧВодитель
      displayAttributeName="табелНомер"
      autocomplete=true
      relationName="тЧВодитель"
      projection="ТЧВодительL"
      title=(t "forms.i-i-s-otdel-logistiki-персонал-e.тЧВодитель-caption")
      readonly=readonly
      componentName="тЧВодительLookup"
      class=(if (v-get validationModel "тЧВодитель" "isInvalid") "error")
      data-test-i-i-s-otdel-logistiki-персонал-e-тЧВодитель=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧВодитель" "message")}}
  </div>
</form>
